    xsi:schemaLocation="com.egloo.www/eGlooConfiguration ../XML/schemas/eGlooConfiguration.xsd">
    <Applications>
		<!-- Extra Include Paths : These are application root relative -->
		<Component id="ExtraClassPath" displayName="Extra Class Path" override="true" type="path" value=""/>
		<Component id="ExtraConfigurationPath" displayName="Extra Configuration Path" override="true" type="path" value=""/>
		<Component id="ExtraDatabasePath" displayName="Extra Database Path" override="true" type="path" value=""/>
		<Component id="ExtraTemplatePath" displayName="Extra Template Path" override="true" type="path" value=""/>


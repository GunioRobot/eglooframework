        <Option id="egRewriteBase" displayName="eGloo Rewrite Base" override="true" type="string" value="" required="true"/>

        <Option id="egUseDoctrine" displayName="" override="true" type="" value="" required="true"/>
        <Option id="egUseSmarty" displayName="" override="true" type="" value="" required="true"/>        

		<Option id="egBuild" displayName="eGloo System Build" override="false" type="enum" value="../Build/BUILDHASH"/>
		<Option id="egMaintenanceVersion" displayName="eGloo System Maintenance Version" override="false" type="enum" value="0"/>
		<Option id="egMajorVersion" displayName="eGloo System Major Version" override="false" type="enum" value="1"/>
		<Option id="egMinorVersion" displayName="eGloo System Minor Version" override="false" type="enum" value="0"/>

        <!-- Application / Bundle Selection -->
        <Option id="egApplication" displayName="Default System Application" override="true" type="enum" value="" required="true"/>
        <Option id="egInterfaceBundle" displayName="Default System Interface Bundle" override="true" type="enum" value="" required="true"/>
        
        <!-- Database Engine -->
        <Option id="egDatabaseEngine" displayName="eGloo Database Engine" override="true" type="enum" value="" required="true"/>


		<Option id="AppBuild" displayName="Build" override="true" type="path" value=""/>
		<Option id="AppMaintenanceVersion" displayName="Maintenance Version" override="true" type="" value=""/>
		<Option id="AppMajorVersion" displayName="Major Version" override="true" type="" value=""/>
		<Option id="AppMinorVersion" displayName="Minor Version" override="true" type="" value=""/>
        <Option id="egUseDoctrine" displayName="" override="true" type="" value="true" required="true"/>
        <Option id="egUseSmarty" displayName="" override="true" type="" value="true" required="true"/>

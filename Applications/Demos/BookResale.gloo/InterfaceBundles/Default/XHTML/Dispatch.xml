<eGlooXHTML:Requests xmlns:eGlooXHTML="com.egloo.www/XHTML" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<RequestClass id="externalMainPage">
		<Request id="extMainViewBase" path="ExternalMainPage">
			<Localization countryCode="" languageCode="" variesOnUserAgent="true">
				<Client id="Microsoft_Internet_Explorer" matches="/^.*MSIE.*$/">
					<DefaultDispatchMap path="Microsoft_Internet_Explorer">ExternalMainPageBaseForm.tpl</DefaultDispatchMap>
				</Client>
				<Client id="Mozilla_Firefox" matches="/^Mozilla.*Gecko.*Firefox.*$/">
					<DefaultDispatchMap>ExternalMainPageBaseForm.tpl</DefaultDispatchMap>
				</Client>
				<Client id="Apple_Safari" matches="/^.*WebKit.*$/">
					<DefaultDispatchMap>ExternalMainPageBaseForm.tpl</DefaultDispatchMap>
				</Client>
				<Client id="Default" matches="/^.*$/">
					<DefaultDispatchMap>ExternalMainPageBaseForm.tpl</DefaultDispatchMap>
				</Client>
			</Localization>
			<Localization countryCode="us" languageCode="" variesOnUserAgent="true">ExternalMainPageBaseForm.tpl</Localization>
			<Localization countryCode="us" languageCode="en" variesOnUserAgent="true">ExternalMainPageBaseForm.tpl</Localization>
		</Request>
		<Request id="extMainJoinForm" path="ExternalMainPage">
			<Localization countryCode="" languageCode="" variesOnUserAgent="true">
				<Client id="Microsoft_Internet_Explorer" matches="/^.*MSIE.*$/">
					<DefaultDispatchMap path="Microsoft_Internet_Explorer">ExternalMainPageJoinForm.tpl</DefaultDispatchMap>
				</Client>
				<Client id="Default" matches="/^.*$/">
					<DefaultDispatchMap>ExternalMainPageJoinForm.tpl</DefaultDispatchMap>
				</Client>
			</Localization>
			<Localization countryCode="us" languageCode="" variesOnUserAgent="true">ExternalMainPageJoinForm.tpl</Localization>
			<Localization countryCode="us" languageCode="en" variesOnUserAgent="true">ExternalMainPageJoinForm.tpl</Localization>
		</Request>
	</RequestClass>
	<RequestClass id="internalMainPage">
		<Request id="getInternalMainPage" path="InternalMainPage">
			<Localization countryCode="" languageCode="" variesOnUserAgent="true">
				<Client id="Microsoft_Internet_Explorer" matches="/^.*MSIE.*$/">
					<DefaultDispatchMap path="Microsoft_Internet_Explorer">InternalMainPageContainer.tpl</DefaultDispatchMap>
				</Client>
				<Client id="Default" matches="/^.*$/">
					<DefaultDispatchMap>InternalMainPageContainer.tpl</DefaultDispatchMap>
				</Client>
			</Localization>
		</Request>
	</RequestClass>
</eGlooXHTML:Requests>
